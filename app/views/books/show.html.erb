<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user', user: @user %>
    </div>
    <div class="col-md-8 offset-md-offset-md-1">
      <h2>Books detail</h2>
      <table class="table">
        <tbody>
          <td>
            <%= link_to user_path(@user) do %>
              <i><%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: "40x40" %></i>
              <%= @user.name %>
              <% end %>
          </td>
          <td>
            <%= @book.title %>
          </td>
          <td>
            <%= @book.body %>
          </td>
          <% if @book.user_id == current_user.id %>
            <td>
              <%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"}, class: "btn btn-danger" %>
            </td>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>